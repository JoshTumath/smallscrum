<button {{action "showForm"}} class="btn-project-form">
  {{#if project}}
    Edit
  {{else}}
    Create
  {{/if}}
  project...
</button>

{{#if isFormShowing}}
  <form {{action "submit" on="submit"}}>
    <ul>
      <li>
        <label for="{{concat elementId '-name'}}">Name</label>
        {{input value=name id=(concat elementId '-name')}}
      </li>
    </ul>

    <button type="submit" class="btn-project-form-submit">Submit</button>
    <button type="button" {{action "hideForm"}} class="btn-project-form-cancel">Cancel</button>
  </form>
{{/if}}
